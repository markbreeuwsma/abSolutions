@model WebApplication_MVC.Models.FieldOfInterestView

@{
    ViewData["Title"] = "Edit " + @Html.DisplayNameFor(model => model.FieldOfInterestId) + " " + Model.FieldOfInterestId + ": " + Model.Description;
}

<h2>Edit</h2>

<h4>Field of interest @Html.DisplayFor(model => model.FieldOfInterestId)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FieldOfInterestId" />
            <input type="hidden" asp-for="RowVersion" />
            <input type="hidden" asp-for="LanguageId" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" autofocus onfocus="this.select();"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" /> |
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
